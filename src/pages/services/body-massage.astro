---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const packages = [
  { name: "REDKEN Root Shadow – Ansatzabdeckung", duration: "1 Std.", price: "ab 40 €", note: "Bei stärkerem Nachwuchs kann ein Aufpreis anfallen" },
  { name: "REDKEN Color Gels Oils – Komplettfärbung kurz", duration: "1,5 Std.", price: "ab 55 €" },
  { name: "REDKEN Color Gels Oils – Komplettfärbung mittel", duration: "1,5 Std.", price: "ab 70 €" },
  { name: "REDKEN Color Gels Oils – Komplettfärbung lang", duration: "2 Std.", price: "ab 95 €" },
  { name: "REDKEN Shades EQ Gloss – Signature Gloss", duration: "30 Min.", price: "ab 40 €", note: "Goldene, kühle oder Perl-Nuancen" },
  { name: "REDKEN Highlights Full Head", duration: "2,5–3 Std.", price: "ab 150–180 €" },
  { name: "Natural Comb Highlights – Kammsträhnen", duration: "1,5 Std.", price: "ab 60 €" },
  { name: "Single Foil Highlight – gezielte Akzentsträhne", duration: "30 Min.", price: "15 €" },
  { name: "Balayage Signature", duration: "3 Std. 40 Min.", price: "ab 220 €", note: "Individuelle Freihandtechnik" },
  { name: "Men's Grey Coverage", duration: "25 Min.", price: "ab 35 €" },
  { name: "Men's Natural Highlights", duration: "25 Min.", price: "ab 35 €" },
];
---
<Layout title="Color & Gloss | Zeynep & Faisal" description="Haarfärbung bei Zeynep & Faisal. REDKEN Professional – ammoniakfrei. Highlights, Balayage, Komplettfärbung, Gloss.">
  <Header />
  <main class="service-page">
    <section class="service-hero">
      <h1>Color & Gloss</h1>
      <p>Alle Farbbehandlungen mit REDKEN Professional – ammoniakfrei, silikonfrei und duftstofffrei. Von Ansatzabdeckung über Komplettfärbung bis Balayage und Highlights.</p>
    </section>
    <section class="packages-section">
      <h2>Leistungen & Preise</h2>
      <div class="packages-grid">
        {packages.map((pkg) => (
          <article class="package-card">
            <h3>{pkg.name}</h3>
            <p class="meta">{pkg.duration} | {pkg.price}</p>
            {pkg.note && <p class="note">{pkg.note}</p>}
          </article>
        ))}
      </div>
    </section>
    <section class="cta-section">
      <p>Vereinbaren Sie jetzt Ihren Termin – wir freuen uns auf Sie!</p>
      <a href="/#book" class="cta-btn">Termin buchen</a>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .service-page { padding-top: 80px; }
  .service-hero { padding: 4rem 1.5rem; text-align: center; background: var(--color-sand); }
  .service-hero h1 { font-family: var(--font-display); font-size: clamp(2.5rem, 6vw, 4rem); color: var(--color-earth); margin-bottom: 1rem; }
  .service-hero p { max-width: 600px; margin: 0 auto; color: var(--color-text-muted); }
  .packages-section { padding: 4rem 1.5rem; max-width: 1000px; margin: 0 auto; }
  .packages-section h2 { font-family: var(--font-display); font-size: 1.75rem; color: var(--color-earth); margin-bottom: 2rem; }
  .packages-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem; }
  .package-card { background: white; padding: 1.5rem; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.04); }
  .package-card h3 { font-family: var(--font-display); font-size: 1.1rem; margin-bottom: 0.5rem; }
  .package-card .meta { color: var(--color-stone); font-weight: 500; margin-bottom: 0.25rem; }
  .package-card .note { font-size: 0.85rem; color: var(--color-text-muted); }
  .cta-section { padding: 4rem 1.5rem; text-align: center; background: var(--color-sand); }
  .cta-section p { margin-bottom: 1rem; color: var(--color-text-muted); }
  .cta-btn { display: inline-block; background: var(--color-stone); color: white; padding: 1rem 2rem; border-radius: 4px; font-weight: 500; }
  .cta-btn:hover { background: var(--color-earth); }
</style>
