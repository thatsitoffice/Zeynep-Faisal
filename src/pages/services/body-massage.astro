---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const packages = [
  {
    name: "Office Syndrome - Mini",
    duration: "60 / 90 / 120 min.",
    price: "590 / 885 / 1,180 THB",
    features: ["Swedish Massage (Back, Shoulder and neck massage)", "Hot Prakob Stone Massage"],
  },
  {
    name: "Office Syndrome - Full Service",
    duration: "90 min.",
    price: "1,190 THB",
    features: ["Swedish Massage (Back, Shoulder and neck massage)", "Hot Prakob Stone Massage", "Head Massage (During Shampoo Wash, Shiseido Product)", "Hair Conditioner", "Waterfall Ring Spa", "Blow Dry Hair (Dyson Airwrap)"],
  },
  {
    name: "Full Body",
    duration: "60 / 90 / 120 min.",
    price: "750 / 1,125 / 1,500 THB",
    features: ["Swedish Massage (Full Body)", "Hot Prakob Stone Massage"],
  },
];

const benefits = [
  { title: "Enhances circulation and detox", text: "Body massage enhances circulation and detoxification by stimulating blood flow throughout the body." },
  { title: "Reduces muscle tension", text: "Body massage reduces muscle tension by applying targeted pressure to tight or overworked muscles." },
  { title: "Relaxation and stress relief", text: "The soothing touch and rhythmic movements help lower cortisol levels and promote calm and well-being." },
];

const highlights = [
  { title: "Pick your aroma therapy", text: "Choose from lavender, eucalyptus, and citrus." },
  { title: "Professional masseuse", text: "Experienced and certified masseuses for expert care." },
  { title: "Private room", text: "Fully private rooms. Single and couple rooms available." },
];
---
<Layout title="Body Massage | Kalm Moments" description="Body massage at Kalm Moments Bangkok. Office Syndrome, Full Body. Swedish massage, Hot Prakob Stone. Book now.">
  <Header />
  <main class="service-page">
    <section class="service-hero">
      <h1>Body Massage</h1>
      <p>Relax and recharge with our body massage. Let the calming touch and gentle oils melt away stress, ease tension, and bring peace to your body and mind.</p>
    </section>
    <section class="packages-section">
      <h2>Packages</h2>
      <div class="packages-grid">
        {packages.map((pkg) => (
          <article class="package-card">
            <h3>{pkg.name}</h3>
            <p class="meta">{pkg.duration} | {pkg.price}</p>
            <ul>
              {pkg.features.map((f) => <li>{f}</li>)}
            </ul>
          </article>
        ))}
      </div>
    </section>
    <section class="benefits-section">
      <h2>Benefits</h2>
      <div class="benefits-list">
        {benefits.map((b) => (
          <div class="benefit-item">
            <h3>{b.title}</h3>
            <p>{b.text}</p>
          </div>
        ))}
      </div>
    </section>
    <section class="highlights-section">
      <h2>Why choose us</h2>
      <div class="highlights-grid">
        {highlights.map((h) => (
          <div class="highlight">
            <h3>{h.title}</h3>
            <p>{h.text}</p>
          </div>
        ))}
      </div>
    </section>
    <section class="cta-section">
      <p>Never miss your wellness moment, book an appointment with us!</p>
      <a href="/book" class="cta-btn">Book an Appointment</a>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .service-page { padding-top: 80px; }
  .service-hero { padding: 4rem 1.5rem; text-align: center; background: var(--color-sand); }
  .service-hero h1 { font-family: var(--font-display); font-size: clamp(2.5rem, 6vw, 4rem); color: var(--color-earth); margin-bottom: 1rem; }
  .service-hero p { max-width: 600px; margin: 0 auto; color: var(--color-text-muted); }
  .packages-section, .benefits-section, .highlights-section { padding: 4rem 1.5rem; max-width: 1000px; margin: 0 auto; }
  .packages-section h2, .benefits-section h2, .highlights-section h2 { font-family: var(--font-display); font-size: 1.75rem; color: var(--color-earth); margin-bottom: 2rem; }
  .packages-grid { display: grid; gap: 2rem; }
  .package-card { background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.04); }
  .package-card h3 { font-family: var(--font-display); font-size: 1.25rem; margin-bottom: 0.5rem; }
  .package-card .meta { color: var(--color-stone); font-weight: 500; margin-bottom: 1rem; }
  .package-card ul { list-style: none; }
  .package-card li { padding: 0.25rem 0; color: var(--color-text-muted); font-size: 0.95rem; }
  .package-card li::before { content: "â€¢ "; color: var(--color-sage); }
  .benefits-list, .highlights-grid { display: grid; gap: 1.5rem; }
  .benefit-item, .highlight { background: white; padding: 1.5rem; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.04); }
  .benefit-item h3, .highlight h3 { font-family: var(--font-display); font-size: 1.2rem; margin-bottom: 0.5rem; }
  .benefit-item p, .highlight p { color: var(--color-text-muted); font-size: 0.95rem; }
  .cta-section { padding: 4rem 1.5rem; text-align: center; background: var(--color-sand); }
  .cta-section p { margin-bottom: 1rem; color: var(--color-text-muted); }
  .cta-btn { display: inline-block; background: var(--color-stone); color: white; padding: 1rem 2rem; border-radius: 4px; font-weight: 500; }
  .cta-btn:hover { background: var(--color-earth); }
</style>
