---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const packages = [
  { name: "Luxury Bonding Extensions – 50 cm (je Strähne 1 gr)", duration: "1 Std.", price: "ab 5,50 €", note: "100 % Echthaar von MyExtensions" },
  { name: "Luxury Bonding Extensions – 60 cm (je Strähne 1 gr)", duration: "1 Std.", price: "ab 6 €", note: "100 % Echthaar von MyExtensions" },
  { name: "Beratung & Farbauswahl Luxury Bonding", duration: "20 Min.", price: "kostenlos", note: "Empfohlen vor jeder Haarverlängerung" },
  { name: "Entfernung von Keratin Bondings (je Strähne)", duration: "1 Std.", price: "ab 1 €" },
  { name: "REDKEN Acidic Bonding Conditioner", duration: "10 Min.", price: "9 €", note: "Intensive Tiefenpflege" },
  { name: "REDKEN Acidic Protein Amino Treatment", duration: "20 Min.", price: "32 €", note: "Höchste Exklusivität, seidiger Glanz" },
  { name: "Eyebrow Sculping – Augenbrauen formen", duration: "15 Min.", price: "9 €" },
  { name: "Eyebrow Tinting – Augenbrauen färben", duration: "15 Min.", price: "10 €" },
  { name: "Eyelash Tinting – Wimpern färben", duration: "15 Min.", price: "10 €" },
  { name: "Beard Trim & Shave – klassische Nassrasur", duration: "10 Min.", price: "14 €" },
  { name: "Beard Machine Shave", duration: "10 Min.", price: "9 €" },
  { name: "Beard Tinting – Bart färben", duration: "15 Min.", price: "17 €" },
];
---
<Layout title="Haarverlängerung & Pflege | Zeynep & Faisal" description="Luxury Bonding Extensions, REDKEN Pflege, Beauty Finish. Haarverlängerung mit MyExtensions, Bartpflege, Augenbrauen.">
  <Header />
  <main class="service-page">
    <section class="service-hero">
      <h1>Haarverlängerung & Pflege</h1>
      <p>Luxury Bonding Extensions aus 100 % Echthaar von MyExtensions. Dazu REDKEN Tiefenpflege, Beauty Finish und Bartpflege für Herren.</p>
    </section>
    <section class="packages-section">
      <h2>Leistungen & Preise</h2>
      <div class="packages-grid">
        {packages.map((pkg) => (
          <article class="package-card">
            <h3>{pkg.name}</h3>
            <p class="meta">{pkg.duration} | {pkg.price}</p>
            {pkg.note && <p class="note">{pkg.note}</p>}
          </article>
        ))}
      </div>
    </section>
    <section class="cta-section">
      <p>Wir empfehlen vor jeder Haarverlängerung eine kostenlose Beratung & Farbauswahl. Vereinbaren Sie jetzt Ihren Termin!</p>
      <a href="/#book" class="cta-btn">Termin buchen</a>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .service-page { padding-top: 80px; }
  .service-hero { padding: 4rem 1.5rem; text-align: center; background: var(--color-sand); }
  .service-hero h1 { font-family: var(--font-display); font-size: clamp(2.5rem, 6vw, 4rem); color: var(--color-earth); margin-bottom: 1rem; }
  .service-hero p { max-width: 600px; margin: 0 auto; color: var(--color-text-muted); }
  .packages-section { padding: 4rem 1.5rem; max-width: 1000px; margin: 0 auto; }
  .packages-section h2 { font-family: var(--font-display); font-size: 1.75rem; color: var(--color-earth); margin-bottom: 2rem; }
  .packages-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem; }
  .package-card { background: white; padding: 1.5rem; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.04); }
  .package-card h3 { font-family: var(--font-display); font-size: 1.1rem; margin-bottom: 0.5rem; }
  .package-card .meta { color: var(--color-stone); font-weight: 500; margin-bottom: 0.25rem; }
  .package-card .note { font-size: 0.85rem; color: var(--color-text-muted); }
  .cta-section { padding: 4rem 1.5rem; text-align: center; background: var(--color-sand); }
  .cta-section p { margin-bottom: 1rem; color: var(--color-text-muted); }
  .cta-btn { display: inline-block; background: var(--color-stone); color: white; padding: 1rem 2rem; border-radius: 4px; font-weight: 500; }
  .cta-btn:hover { background: var(--color-earth); }
</style>
