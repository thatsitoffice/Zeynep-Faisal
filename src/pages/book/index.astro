<style>
  .book-page {
    padding-top: 80px;
  }

  .book-hero {
    padding: 4rem 1.5rem;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .book-hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-earth);
    margin-bottom: 1.5rem;
  }

  .book-hero p {
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem;
  }

  .contact-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 2rem 1rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.04);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .contact-card .icon {
    font-size: 2rem;
  }

  .contact-card h3 {
    font-family: var(--font-display);
    font-size: 1.1rem;
    color: var(--color-earth);
  }

  .line-section {
    padding: 3rem 1.5rem;
    text-align: center;
    background: var(--color-sand);
  }

  .line-section h2 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-earth);
    margin-bottom: 1rem;
  }

  .line-section p {
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .line-btn {
    display: inline-block;
    margin-top: 1rem;
    background: #06c755;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .line-btn:hover {
    opacity: 0.9;
  }
</style>
