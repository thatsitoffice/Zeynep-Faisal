---
const testimonials = [
  { author: "Kundin", text: "Die Atmosphäre im Salon ist angenehm und entspannt. Zeynep versteht meine Wünsche jedes Mal genau und das Ergebnis ist wieder einmal einfach perfekt!" },
  { author: "Stammkunde", text: "Gehe seit Jahren hin und bin wie immer total zufrieden." },
  { author: "Kundin", text: "Super nette und kompetente Beratung. Bin mit dem Ergebnis nach Hause gegangen, wie ich es mir vorgestellt hatte und sehr zufrieden." },
  { author: "Kundin", text: "Ich bin sehr zufrieden." },
  { author: "Kundin", text: "Top Beratung und Ergebnis!" },
  { author: "Kundin", text: "Immer wieder gerne – bestens aufgehoben." },
];

const googleReviewsUrl = "https://www.google.com/search?q=New+Style+by+Zeynep+%26+Faisal+-+Meisterbetrieb+-+Gelsenkirchen+Rezensionen&hl=de&tbm=lcl";
---
<section class="testimonials" id="Gallery">
  <h2 class="section-title">Was unsere Kunden sagen</h2>
  <a href={googleReviewsUrl} target="_blank" rel="noopener noreferrer" class="reviews-link">Alle Google-Bewertungen ansehen →</a>
  <div class="testimonials-slider">
    <div class="testimonials-track">
      {[...testimonials, ...testimonials].map((t) => (
        <blockquote class="testimonial">
          <p>„{t.text}"</p>
          <cite>— {t.author}</cite>
        </blockquote>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: 5rem 1.5rem;
    overflow: hidden;
  }

  .testimonials .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--color-earth);
    text-align: center;
    margin-bottom: 1rem;
  }

  .reviews-link {
    display: block;
    text-align: center;
    color: var(--color-stone);
    font-weight: 500;
    font-size: 0.95rem;
    margin-bottom: 3rem;
  }

  .reviews-link:hover {
    color: var(--color-earth);
  }

  .testimonials-slider {
    overflow: hidden;
  }

  .testimonials-track {
    display: flex;
    gap: 2rem;
    animation: scroll 40s linear infinite;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .testimonial {
    flex: 0 0 350px;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.04);
    font-style: normal;
  }

  .testimonial p {
    font-size: 1rem;
    color: var(--color-text);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .testimonial cite {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-style: normal;
  }
</style>