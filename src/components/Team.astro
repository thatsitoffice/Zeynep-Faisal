---
const team = [
  { name: "Zeynep", initials: "Z", role: "Inhaberin", image: null },
  { name: "Faisal", initials: "F", role: "Inhaber", image: null },
  { name: "Emre Omran", initials: "EO", role: "Stylist", image: null },
  { name: "Bekir", initials: "B", role: "Stylist", image: null },
  { name: "Abdul", initials: "A", role: "Stylist", image: null },
  { name: "Yana", initials: "Y", role: "Stylist", image: null },
];
---
<section class="team" id="mitarbeiter">
  <div class="team-grid-section">
    <p class="team-grid-label">Unser Team</p>
    <h3 class="team-grid-title">Stellen sich vor</h3>
    <div class="team-grid">
      {team.map((member) => (
        <article class="team-card">
          <div class="team-card-image">
            {member.image ? (
              <img src={member.image} alt={member.name} />
            ) : (
              <span class="initials">{member.initials}</span>
            )}
          </div>
          <div class="team-card-content">
            <p class="team-card-name">{member.name}</p>
            <p class="team-card-role">{member.role}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    background: #1a1a1a;
  }

  .team-grid-section {
    background: #1a1a1a;
    padding: clamp(4rem, 8vw, 6rem) clamp(1.5rem, 5vw, 3rem);
  }

  .team-grid-label {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .team-grid-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 500;
    color: white;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: clamp(2.5rem, 5vw, 4rem);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: clamp(1.5rem, 3vw, 2.5rem);
    max-width: 1200px;
    margin: 0 auto;
  }

  .team-card {
    background: transparent;
    overflow: hidden;
    border-radius: 4px;
  }

  .team-card-image {
    aspect-ratio: 1;
    background: #2a2a2a;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .team-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .initials {
    color: rgba(255, 255, 255, 0.5);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 500;
    font-family: var(--font-display);
  }

  .team-card-content {
    background: white;
    padding: 1.5rem;
    text-align: center;
  }

  .team-card-name {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-earth);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }

  .team-card-role {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  @media (min-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
