---
const planityUrl = "https://www.planity.com/de-DE/new-style-by-zeynep-faisal-meisterbetrieb-45891-gelsenkirchen";
const navLinks = [
  { href: "/#aboutUs", label: "Über uns" },
  { href: "/#salon", label: "Salon" },
  { href: "/#ourServices", label: "Leistungen" },
  { href: "/#resultAndBenefit", label: "Vorteile" },
  { href: "/#Gallery", label: "Galerie" },
  { href: planityUrl, label: "Termin buchen", cta: true, external: true },
];
---
<header class="header">
  <nav class="nav">
    <a href="/" class="logo">Zeynep & Faisal</a>
    <button class="menu-btn" aria-label="Menü öffnen" id="menuToggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <ul class="nav-links">
      {navLinks.map((link) => (
        <li>
          <a href={link.href} class={link.cta ? "cta" : ""} target={link.external ? "_blank" : undefined} rel={link.external ? "noopener noreferrer" : undefined}>{link.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  const toggle = document.getElementById('menuToggle');
  const nav = document.querySelector('.nav-links');
  if (toggle && nav) {
    toggle.addEventListener('click', () => {
      nav.classList.toggle('open');
      toggle.classList.toggle('active');
    });
    document.querySelectorAll('.nav-links a').forEach(link => {
      link.addEventListener('click', () => {
        nav.classList.remove('open');
        toggle.classList.remove('active');
      });
    });
  }
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: transparent;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: white;
    letter-spacing: 0.02em;
    text-transform: lowercase;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: white;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: rgba(255, 255, 255, 0.85);
  }

  .nav-links a.cta {
    background: var(--color-stone);
    color: white;
    padding: 0.5rem 1.25rem;
    border-radius: 4px;
  }

  .nav-links a.cta:hover {
    background: var(--color-earth);
    color: white;
  }

  .menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .menu-btn span {
    width: 24px;
    height: 2px;
    background: white;
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .menu-btn {
      display: flex;
    }

    .nav-links {
      position: fixed;
      top: 60px;
      right: -100%;
      width: 80%;
      max-width: 300px;
      height: calc(100vh - 60px);
      background: white;
      flex-direction: column;
      padding: 2rem;
      gap: 1.5rem;
      transition: right 0.3s;
      box-shadow: -4px 0 20px rgba(0,0,0,0.1);
    }

    .nav-links.open {
      right: 0;
    }

    .nav-links.open a {
      color: #1a1a1a;
    }

    .nav-links.open a:hover {
      color: #333;
    }

    .nav-links.open a.cta {
      background: #1a1a1a;
      color: white;
    }

    .nav-links.open a.cta:hover {
      background: #333;
      color: white;
    }
  }
</style>
